<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <uses-permission android:name="android.permission.MANAGE_OWN_CALLS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".CallApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Call">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Call"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.DIAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.DIAL" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="tel" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.DIAL" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="tel" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.logs.CallLogActivity"
            android:exported="false"
            android:label="@string/call_logs_title"
            android:theme="@style/Theme.Call" />

        <activity
            android:name=".ui.stats.CallStatsActivity"
            android:exported="false"
            android:label="@string/call_stats_title"
            android:theme="@style/Theme.Call" />

        <activity
            android:name=".ui.notes.NoteActivity"
            android:exported="false"
            android:label="Call Notes"
            android:theme="@style/Theme.Call" />

        <activity
            android:name=".ui.call.IncomingCallActivity"
            android:exported="false"
            android:label="@string/incoming_call"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.Call"
            android:launchMode="singleInstance"
            tools:targetApi="27" />

        <activity
            android:name=".ui.call.OngoingCallActivity"
            android:exported="false"
            android:label="@string/ongoing_call"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:theme="@style/Theme.Call"
            android:launchMode="singleInstance"
            tools:targetApi="27" />

        <activity
            android:name=".ui.call.CallSummaryActivity"
            android:exported="false"
            android:label="@string/call_summary"
            android:theme="@style/Theme.Call" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/settings"
            android:theme="@style/Theme.Call" />

        <activity
            android:name=".ui.permissions.PermissionsActivity"
            android:exported="false"
            android:label="Permissions"
            android:theme="@style/Theme.Call" />

        <service
            android:name=".telecom.CallInCallService"
            android:exported="true"
            android:permission="android.permission.BIND_INCALL_SERVICE">
            <intent-filter>
                <action android:name="android.telecom.InCallService" />
            </intent-filter>
            <meta-data
                android:name="android.telecom.IN_CALL_SERVICE_UI"
                android:value="true" />
        </service>

        <service
            android:name=".telecom.OngoingCallService"
            android:exported="false"
            android:foregroundServiceType="phoneCall" />

        <receiver android:name=".util.CallReminderReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.call.ACTION_REMINDER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
