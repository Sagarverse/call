<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Call" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:colorBackground">@color/bg_dark</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SettingsHeader" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/call_green</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="SettingsCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/glass_white</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_stroke</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="SettingsButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="backgroundTint">@color/glass_white</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="iconTint">@color/text_secondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">24dp</item>
    </style>

    <style name="SettingsSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>
</resources>