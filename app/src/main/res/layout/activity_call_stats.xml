<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/call_stats_title"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconTint="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/statsScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- Stats Summary Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_marginStart="24dp"
                android:text="Summary" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Calls"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/dailyCalls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/call_green"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly Calls"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/weeklyCalls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/call_green"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/SettingsDivider" android:layout_marginVertical="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Duration"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/dailyDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Weekly Duration"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/weeklyDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reminders Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Upcoming Reminders" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/remindersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/noRemindersText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="No upcoming reminders"
                android:textColor="@color/text_tertiary"
                android:visibility="gone" />

            <!-- Notes Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Call Notes" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/noNotesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="No call notes yet"
                android:textColor="@color/text_tertiary"
                android:visibility="gone" />

            <!-- Analytics Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Insights" />

            <com.google.android.material.card.MaterialCardView
                style="@style/SettingsCard"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Contacts"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/topContactsValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Peak Hours"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/peakHoursValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
