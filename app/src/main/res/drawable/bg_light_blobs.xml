<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/bg_dark" />

    <item android:top="-40dp" android:left="-80dp">
        <shape android:shape="oval">
            <size android:width="260dp" android:height="260dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="180dp"
                android:startColor="@color/blob_pink"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item android:top="120dp" android:right="-60dp">
        <shape android:shape="oval">
            <size android:width="240dp" android:height="240dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="170dp"
                android:startColor="@color/blob_purple"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item android:bottom="-60dp" android:left="-40dp">
        <shape android:shape="oval">
            <size android:width="220dp" android:height="220dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="160dp"
                android:startColor="@color/blob_blue"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
